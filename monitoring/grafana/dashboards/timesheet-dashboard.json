{
  "dashboard": {
    "id": null,
    "title": "Timesheet Application Monitoring",
    "tags": ["timesheet"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Backend Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"timesheet-backend\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "HTTP Requests Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count[5m])",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "jvm_memory_used_bytes / jvm_memory_max_bytes * 100",
            "refId": "A"
          }
        ],        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Nginx Active Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "nginx_connections_active{job=\"frontend-nginx\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Nginx HTTP Requests Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(nginx_http_requests_total{job=\"frontend-nginx\"}[5m])",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 16}
      },
      {
        "id": 6,
        "title": "Nginx Connection States",
        "type": "graph",
        "targets": [
          {
            "expr": "nginx_connections_accepted{job=\"frontend-nginx\"}",
            "refId": "A",
            "legendFormat": "Accepted"
          },
          {
            "expr": "nginx_connections_handled{job=\"frontend-nginx\"}",
            "refId": "B",
            "legendFormat": "Handled"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 16}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}
